@model ProductCategoryViewModel
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listCategories = ViewBag.Categories;
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

<div class="breadcrumb">
    <div class="container">
        <div class="breadcrumb-inner">
            <ul class="list-inline list-unstyled">
                <li><a href="/">Trang chủ</a></li>
                <li class='active'>@Model.Category.Name</li>
            </ul>
        </div>
        <!-- /.breadcrumb-inner -->
    </div>
    <!-- /.container -->
</div>
<!-- /.breadcrumb -->
<div class="body-content outer-top-xs">
    <div class='container'>
        <div class='row'>
            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
                <div class="side-menu animate-dropdown outer-bottom-xs">
                    <div class="head"><i class="icon fa fa-align-justify fa-fw"></i> Danh mục</div>
                    <nav class="yamm megamenu-horizontal">
                        <ul class="nav">
                            @foreach (var item in listCategories.Categories)
                            {
                                <li class="menu-item">
                                    <a href="/danh-muc/@item.Id">
                                        <i class="icon fa fa-laptop" aria-hidden="true"></i>
                                        @item.Name
                                    </a>
                                </li>
                                <!-- /.menu-item -->
                            }

                        </ul>
                        <!-- /.nav -->
                    </nav>
                    <!-- /.megamenu-horizontal -->
                </div>
            </div>
            <!-- /.sidebar -->
            <div class="col-xs-12 col-sm-12 col-md-9 rht-col">
                <div class="clearfix filters-container m-t-10">
                    <div class="row">
                        <div class="col col-sm-6 col-md-3 col-lg-3 col-xs-6">
                            <div class="filter-tabs">
                                <ul id="filter-tabs" class="nav nav-tabs nav-tab-box nav-tab-fa-icon">
                                    <li class="active"> <a data-toggle="tab" href="#grid-container"><i class="icon fa fa-th-large"></i>Grid</a> </li>
                                    <li><a data-toggle="tab" href="#list-container"><i class="icon fa fa-bars"></i>List</a></li>
                                </ul>
                            </div>
                            <!-- /.filter-tabs -->
                        </div>

                    </div>
                    <!-- /.row -->
                </div>
                <div class="search-result-container ">
                    <div id="myTabContent" class="tab-content category-list">
                        <div class="tab-pane active " id="grid-container">
                            <div class="category-product">
                                <div class="row">
                                    @foreach (var item in Model.Products.Items)
                                    {
                                        <div class="col-sm-6 col-md-4 col-lg-3">
                                            <div class="item">
                                                <div class="products">
                                                    <div class="product">
                                                        <div class="product-image" style="height:150px">
                                                            <div class="image">
                                                                <a href="/san-pham/@item.Id">
                                                                    <img style="height: auto;" src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt="@item.Name">
                                                                    @*<img src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt="" class="hover-image">*@
                                                                </a>
                                                            </div>
                                                            <!-- /.image -->


                                                        </div>
                                                        <!-- /.product-image -->

                                                        <div class="product-info text-left">
                                                            <h3 class="name" style="overflow:hidden; text-overflow:ellipsis; display: -webkit-box;-webkit-line-clamp: 3;-webkit-box-orient: vertical;">
                                                                <a href="/san-pham/@item.Id">@item.Name</a>
                                                            </h3>
                                                            <div class="rating rateit-small"></div>
                                                            <div class="description"></div>
                                                            <div class="product-price">
                                                                <span class="price"> @String.Format("{0:N0}", item.Price) VNĐ </span><br/>
                                                                <span class="price-before-discount">@String.Format("{0:N0}", item.Price * (decimal)1.25) VNĐ</span>
                                                            </div>
                                                            <!-- /.product-price -->

                                                        </div>
                                                        <!-- /.product-info -->
                                                        <div style="top: 35%" class="cart clearfix animate-effect">
                                                            <div class="action">
                                                                <ul class="list-unstyled">
                                                                    <li class="lnk shopping-cart"> <a onclick="addcart()" data-toggle="tooltip" class="add-to-cart" href="#" title="Thêm vào giỏ hàng"> <i class="fa fa-shopping-cart"></i> </a> </li>
                                                                    <li class="lnk wishlist"> <a class="add-to-cart" data-toggle="tooltip" href="#" title="Yêu thích"> <i class="icon fa fa-heart"></i> </a> </li>
                                                                    <li class="lnk"> <a class="add-to-cart" href="#" data-toggle="tooltip" title="So sánh"> <i class="fa fa-signal"></i> </a> </li>
                                                                </ul>
                                                            </div>
                                                            <!-- /.action -->
                                                        </div>
                                                        <!-- /.cart -->
                                                    </div>
                                                    <!-- /.product -->

                                                </div>
                                                <!-- /.products -->
                                            </div>
                                        </div>

                                    }

                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.search-result-container -->
                            <!-- /.category-product -->
                        </div>
                        <!-- /.tab-pane -->


                        <div class="tab-pane " id="list-container">
                            <div class="category-product">
                                @foreach (var item in Model.Products.Items)
                                {
                                    <div class="category-product-inner">
                                        <div class="products">
                                            <div class="product-list product">
                                                <div class="row product-list-row">
                                                    <div class="col col-sm-3 col-lg-3">
                                                        <div class="product-image" style="height:150px">
                                                            <div class="image"> 
                                                                <img style="height: auto;" src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt="@item.Name"> 
                                                            </div>
                                                        </div>
                                                        <!-- /.product-image -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col col-sm-9 col-lg-9">
                                                        <div class="product-info">
                                                            <h3 class="name" style="overflow:hidden; text-overflow:ellipsis; display: -webkit-box;-webkit-line-clamp: 3;-webkit-box-orient: vertical;">
                                                                <a href="/san-pham/@item.Id">@item.Name</a>
                                                            </h3>
                                                            <div class="rating rateit-small"></div>
                                                            <div class="product-price">
                                                                <span class="price"> @String.Format("{0:N0}", item.Price) VNĐ </span> <br/>
                                                                <span class="price-before-discount">@String.Format("{0:N0}", item.Price * (decimal)1.25) VNĐ</span>
                                                            </div>
                                                            <!-- /.product-price -->
                                                            <div class="description m-t-10">@item.Description</div>
                                                            <div style="top: 35%" class="cart clearfix animate-effect">
                                                                <div class="action">
                                                                    <ul class="list-unstyled">
                                                                        <li class="lnk shopping-cart"> <a onclick="addcart()" data-toggle="tooltip" class="add-to-cart" href="#" title="Thêm vào giỏ hàng"> <i class="fa fa-shopping-cart"></i> </a> </li>
                                                                        <li class="lnk wishlist"> <a class="add-to-cart" href="#" title="Yêu thích"> <i class="icon fa fa-heart"></i> </a> </li>
                                                                        <li class="lnk"> <a class="add-to-cart" href="#" title="So sánh"> <i class="fa fa-signal"></i> </a> </li>
                                                                    </ul>
                                                                </div>
                                                                <!-- /.action -->
                                                            </div>
                                                            <!-- /.cart -->

                                                        </div>
                                                        <!-- /.product-info -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.product-list-row -->
                                            </div>
                                            <!-- /.product-list -->
                                        </div>
                                        <!-- /.products -->
                                    </div>
                                }


                            </div>
                            <!-- /.category-product -->
                        </div>
                        <!-- /.tab-pane #list-container -->
                    </div>
                    @*<div class="spec">
                        @(Model.Products.PageCount < Model.Products.PageSize ? 0 : Model.Products.PageSize) / @Model.Products.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>*@
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</div>

