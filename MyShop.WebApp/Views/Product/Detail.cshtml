@using MyShop.ViewModels.ProductRatings;
@model ProductDetailViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var featuredProducts = ViewBag.FeaturedProduct;
    //var rating = new ProductRatingCreateRequest();
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
<div class="breadcrumb">
    <div class="container">
        <div class="breadcrumb-inner">
            <ul class="list-inline list-unstyled">
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/danh-muc/@Model.Product.CategoryId">@Model.Category.Name</a></li>
                <li class='active'>@Model.Product.Name</li>
            </ul>
        </div><!-- /.breadcrumb-inner -->
    </div><!-- /.container -->
</div><!-- /.breadcrumb -->

<input id="maSP" value="@Model.Product.Id" hidden />

<div class="body-content outer-top-xs">
    <div class='container'>
        <div class='row single-product'>
            <div class='col-xs-12 col-sm-12 col-md-3 sidebar'>
                <div class="sidebar-module-container">
                    <div class="home-banner outer-top-n outer-bottom-xs">
                        <img src="~/Assets/client/images/banners/LHS-banner.jpg" alt="Image">
                    </div>



                    <!-- ============================================== HOT DEALS ============================================== -->
                    <div class="sidebar-widget hot-deals outer-bottom-xs">
                        <h3 class="section-title">Hot deals</h3>
                        <div class="owl-carousel sidebar-carousel custom-carousel owl-theme outer-top-ss">
                            @foreach (var item in featuredProducts.FeaturedProducts)
                            {
                                <div class="item">
                                    <div class="products">
                                        <div class="hot-deal-wrapper">
                                            <div class="image">
                                                <a href="#">
                                                    <img src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt="@item.Name">
                                                    @*<img src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt="" class="hover-image">*@
                                                </a>
                                            </div>
                                            <div class="sale-offer-tag">
                                                <span>
                                                    25%<br>
                                                    off
                                                </span>
                                            </div>
                                            <div class="timing-wrapper">
                                                <div class="box-wrapper">
                                                    <div class="date box"> <span class="key">120</span> <span class="value">DAYS</span> </div>
                                                </div>
                                                <div class="box-wrapper">
                                                    <div class="hour box"> <span class="key">20</span> <span class="value">HRS</span> </div>
                                                </div>
                                                <div class="box-wrapper">
                                                    <div class="minutes box"> <span class="key">36</span> <span class="value">MINS</span> </div>
                                                </div>
                                                <div class="box-wrapper">
                                                    <div class="seconds box"> <span class="key">60</span> <span class="value">SEC</span> </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.hot-deal-wrapper -->

                                        <div class="product-info text-left m-t-20">
                                            <h3 class="name"><a href="#">@item.Name</a></h3>
                                            <div class="rating rateit-small"></div>
                                            <div class="product-price">
                                                <span class="price"> @String.Format("{0:N0}", item.Price) VNĐ </span> <br />
                                                <span class="price-before-discount">@String.Format("{0:N0}", item.Price * (decimal)1.25) VNĐ</span>
                                            </div>
                                            <!-- /.product-price -->

                                        </div>
                                        <!-- /.product-info -->

                                        <div class="cart clearfix animate-effect">
                                            <div class="add">
                                                <h4><a onclick="addcart()" class="btn btn-success addcart" href="#">Thêm vào giỏ hàng</a></h4>
                                            </div>
                                            <!-- /.action -->
                                        </div>
                                        <!-- /.cart -->
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- /.sidebar-widget -->
                    </div>

                    <!-- ============================================== Testimonials: END ============================================== -->



                </div>
            </div><!-- /.sidebar -->
            <div class='col-xs-12 col-sm-12 col-md-9 rht-col'>
                <div class="detail-block">
                    <div class="row">

                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 gallery-holder">
                            <div class="product-item-holder size-big single-product-gallery small-gallery">

                                <div id="owl-single-product">
                                    <div class="single-product-gallery-item" id="slide1">
                                        <a data-lightbox="image-1" data-title="Gallery">
                                            <img id="zoom" class="img-responsive" alt="" src="@Configuration["BaseAddressImage"]/@Model.Product.ThumbnailImage" />
                                        </a>
                                    </div>
                                </div><!-- /.single-product-slider -->

                            </div><!-- /.single-product-gallery -->
                        </div><!-- /.gallery-holder -->
                        <div class='col-sm-12 col-md-8 col-lg-8 product-info-block'>
                            <div class="product-info">
                                <h1 class="name">@Model.Product.Name</h1>

                                <div class="rating-reviews m-t-20">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="pull-left">
                                                <div class="rating rateit-small"></div>
                                            </div>
                                            <div class="pull-left">
                                                <div class="review">
                                                    <a href="#" class="lnk">30 lượt xem</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- /.row -->
                                </div><!-- /.rating-reviews -->

                                <div class="description-container m-t-20">
                                    @Model.Product.Description
                                </div><!-- /.description-container -->

                                <div class="price-container info-container m-t-30">
                                    <div class="row">


                                        <div class="col-sm-6 col-xs-6">
                                            <div class="price-box">
                                                <span class="price"> @String.Format("{0:N0}", @Model.Product.Price) VNĐ </span> <br />
                                                <span class="price-before-discount">@String.Format("{0:N0}", @Model.Product.Price * (decimal)1.25) VNĐ</span>
                                            </div>
                                        </div>
                                    </div><!-- /.row -->
                                </div><!-- /.price-container -->

                                <div class="quantity-container info-container">
                                    <div class="row">

                                        @*<div class="qty">
                                                <span class="label">Số lượng :</span>
                                            </div>

                                            <div class="qty-count">
                                                <div class="cart-quantity">
                                                    <div class="quant-input">
                                                        <div class="arrows">
                                                            <div class="arrow plus gradient"><span class="ir"><i class="icon fa fa-sort-asc"></i></span></div>
                                                            <div class="arrow minus gradient"><span class="ir"><i class="icon fa fa-sort-desc"></i></span></div>
                                                        </div>
                                                        <input type="text" value="1">
                                                    </div>
                                                </div>
                                            </div>*@

                                        <div class="add-btn">
                                            <a onclick="addcart()" href="#" class="btn btn-primary"><i class="fa fa-shopping-cart inner-right-vs"></i> Thêm vào giỏ hàng</a>
                                        </div>


                                    </div><!-- /.row -->
                                </div><!-- /.quantity-container -->






                            </div><!-- /.product-info -->
                        </div><!-- /.col-sm-7 -->
                    </div><!-- /.row -->
                </div>

                <div class="product-tabs inner-bottom-xs">
                    <div class="row">
                        <div class="col-sm-12 col-md-3 col-lg-3">
                            <ul id="product-tabs" class="nav nav-tabs nav-tab-cell">
                                <li class="active"><a data-toggle="tab" href="#description">Cấu hình</a></li>
                                <li><a data-toggle="tab" href="#review">Đánh giá</a></li>
                            </ul><!-- /.nav-tabs #product-tabs -->
                        </div>
                        <div class="col-sm-12 col-md-9 col-lg-9">

                            <div class="tab-content">

                                <div id="description" class="tab-pane in active">
                                    <div class="product-tab">
                                        <p class="text">@Html.Raw(Model.Product.Configuration)</p>
                                    </div>
                                </div><!-- /.tab-pane -->

                                <div id="review" class="tab-pane">
                                    <div class="product-tab">

                                        <div class="product-reviews">
                                            <h4 class="title">Đánh giá của khách hàng</h4>

                                            <div class="reviews">
                                                @foreach (var item in Model.Ratings)
                                                {
                                                    <div class="review">
                                                        <div class="review-title">
                                                            <span><b>@item.UserName</b></span>
                                                            <span class="summary" style="margin-left:30px;">@item.PublishedDate.ToString("dd/MM/yyyy")</span>
                                                        </div>
                                                        <div class="text">@item.Comment</div>
                                                    </div>
                                                }


                                            </div><!-- /.reviews -->
                                        </div><!-- /.product-reviews -->



                                        <div class="product-add-review">
                                            <h4 class="title">Đánh giá</h4>
                                            @*<div class="stars">
                                                    <form action="">
                                                        <input class="star star-5" id="star-5" type="radio" name="star" />
                                                        <label class="star star-5" for="star-5"></label>
                                                        <input class="star star-4" id="star-4" type="radio" name="star" />
                                                        <label class="star star-4" for="star-4"></label>
                                                        <input class="star star-3" id="star-3" type="radio" name="star" />
                                                        <label class="star star-3" for="star-3"></label>
                                                        <input class="star star-2" id="star-2" type="radio" name="star" />
                                                        <label class="star star-2" for="star-2"></label>
                                                        <input class="star star-1" id="star-1" type="radio" name="star" />
                                                        <label class="star star-1" for="star-1"></label>
                                                    </form>
                                                </div>*@

                                            <div class="review-form">
                                                <div class="form-container">
                                                    <form class="cnt-form" asp-action="AddRating" asp-controller="Product" method="post">
                                                        <input hidden asp-for="ProductId" value="@Model.Product.Id" />
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="exampleInputReview">Nội dung<span class="astk">*</span></label>
                                                                    <textarea asp-for="Comment" class="form-control txt txt-review" id="noidung" rows="5" placeholder="Sản phẩm chất lượng tốt ..."></textarea>
                                                                </div><!-- /.form-group -->
                                                            </div>
                                                        </div><!-- /.row -->

                                                        <div class="action text-right">
                                                            <button class="btn btn-primary btn-upper" type="submit" @*id="binh_luan"*@>Đăng</button>
                                                        </div><!-- /.row -->
                                                    </form><!-- /.cnt-form -->
                                                </div><!-- /.form-container -->
                                            </div><!-- /.review-form -->

                                        </div><!-- /.product-add-review -->

                                    </div><!-- /.product-tab -->
                                </div><!-- /.tab-pane -->

                            </div><!-- /.tab-content -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.product-tabs -->
                <!-- ============================================== UPSELL PRODUCTS ============================================== -->
                <section class="section featured-product">
                    <div class="row">
                        <div class="col-lg-3">
                            <h3 class="section-title">Sản phẩm</h3>
                            <div class="ad-imgs">
                                <img class="img-responsive" src="~/Assets/client/images/banners/home-banner1.jpg" alt="">
                                <img class="img-responsive" src="~/Assets/client/images/banners/home-banner2.jpg" alt="">
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="owl-carousel homepage-owl-carousel upsell-product custom-carousel owl-theme outer-top-xs">
                                @foreach (var item in Model.RelatedProducts)
                                {
                                    if (item.Id != Model.Product.Id)
                                    {
                                        <div class="item item-carousel">
                                            <div class="products">

                                                <div class="product">
                                                    <div class="product-image">
                                                        <div class="image">
                                                            <a href="/san-pham/@item.Id"><img src="@Configuration["BaseAddressImage"]/@item.ThumbnailImage" alt=""></a>
                                                        </div><!-- /.image -->
                                                    </div><!-- /.product-image -->


                                                    <div class="product-info text-left">
                                                        <h3 class="name" style="overflow:hidden;text-overflow:ellipsis"><a href="/san-pham/@item.Id">@item.Name</a></h3>
                                                        <div class="rating rateit-small"></div>
                                                        <div class="description"></div>

                                                        <div class="product-price">
                                                            <span class="price"> @String.Format("{0:N0}", @Model.Product.Price) VNĐ </span>
                                                        </div><!-- /.product-price -->

                                                    </div><!-- /.product-info -->
                                                    <div class="cart clearfix animate-effect">
                                                        <div class="action">
                                                            <ul class="list-unstyled">
                                                                <li class="lnk shopping-cart"> <a onclick="addcart()" data-toggle="tooltip" class="add-to-cart" href="#" title="Thêm vào giỏ hàng"> <i class="fa fa-shopping-cart"></i> </a> </li>

                                                                <li class="lnk wishlist">
                                                                    <a class="add-to-cart" href="#" title="Yêu thích">
                                                                        <i class="icon fa fa-heart"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div><!-- /.action -->
                                                    </div><!-- /.cart -->
                                                </div><!-- /.product -->

                                            </div><!-- /.products -->
                                        </div>
                                    }

                                }




                            </div><!-- /.home-owl-carousel -->
                        </div>
                    </div>
                </section><!-- /.section -->
                <!-- ============================================== UPSELL PRODUCTS : END ============================================== -->

            </div><!-- /.col -->
            <div class="clearfix"></div>
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>
